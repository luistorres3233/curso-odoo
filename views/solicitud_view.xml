<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- 
    		Vista form de CO Multimedia
        -->
        <record id="view_solicitud_form" model="ir.ui.view">
            <field name="name">co.solicitud.form</field>
            <field name="model">co.solicitud</field>
            <field name="arch" type="xml">
                <form string="Solicitud" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="codigo"/>
                            <h1>
                                <field name="codigo" required="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Detalles">
                                <group>
                                    <field name="suscriptor_id"/>
                                    <field name="multimedia_id"/>
                                    <field name="medio_id"/>
                                    <field name="tienda_id"/>
                                    <field name="fecha_solicitud"/>
                                    <field name="cant_dias"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- 
    		Vista Tree de CO Multimedia
        -->

        <record id="view_solicitud_tree" model="ir.ui.view">
            <field name="name">co.solicitud.tree</field>
            <field name="model">co.solicitud</field>
            <field name="arch" type="xml">
                <tree string="Solicitud">
                    <field name="codigo"/>
                    <field name="fecha_solicitud"/>
                    <field name="cant_dias"/>
                    <field name="suscriptor_id"/>
                    <field name="multimedia_id"/>
                    <field name="tienda_id"/>
                </tree>
            </field>
        </record>

        <record id="action_solicitud" model="ir.actions.act_window">
            <field name="name">Alquilar</field>
            <field name="res_model">co.solicitud</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_solicitud_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Puedes registrar una solicitud para alquilar un contenido multimedia.
                </p>
            </field>
        </record>
        <menuitem action="action_solicitud" id="menu_solicitud" sequence="5" parent="submenu_tienda" />
    </data>
</openerp>

