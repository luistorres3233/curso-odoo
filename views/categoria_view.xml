<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- 
    		Vista form de CO Multimedia
        -->
        <record id="view_categoria_form" model="ir.ui.view">
            <field name="name">co.categoria.form </field>
            <field name="model">co.categoria</field>
            <field name="arch" type="xml">
                <form string="Categoria" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="nombre"/>
                            <h1>
                                <field name="nombre" required="1"/>
                            </h1>
                            <label for="parent_id" class="oe_edit_only"/>
                            <h3>
                             <field name="parent_id"/>   
                            </h3>
                            <notebook>
                                <page string="Detalles">
                                    <group string="Descripción">
                                        <field name="descripcion" nolabel="1"/>
                                    </group>
                                    <group string="Subcategorías">
                                        <field name="child_ids" nolabel="1"/>
                                    </group>
                                </page>
                            </notebook>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- 
    		Vista Tree de CO Multimedia
        -->

        <record id="view_categoria_tree" model="ir.ui.view">
            <field name="name">co.categoria.tree </field>
            <field name="model">co.categoria</field>
            <field name="arch" type="xml">
                <tree string="Categoria">
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>

        <record id="action_categoria" model="ir.actions.act_window">
            <field name="name">Categorias</field>
            <field name="res_model">co.categoria</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_categoria_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Aquí puedes gestionar las distintas categorias a usar durante la categorización de lós contenidos multimedia.
                </p>
            </field>
        </record>
        <menuitem action="action_categoria" id="menu_categoria" sequence="5" parent="submenu_multimedia" />
    </data>
</openerp>